<p id="notice"><%= notice %></p>

<h1>Venues</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Description</th>
      <th>Main image url</th>
      <th>Image 2 url</th>
      <th>Image 3 url</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.name %></td>
        <td><%= venue.email %></td>
        <td><%= venue.phone %></td>
        <td><%= venue.address %></td>
        <td><%= venue.description %></td>
        <td><%= venue.main_image_url %></td>
        <td><%= venue.image_2_url %></td>
        <td><%= venue.image_3_url %></td>
        <td><%= venue.venue_type %></td>
        <td><%= link_to 'Show', venue %></td>
        <td><%= link_to 'Edit', edit_venue_path(venue) %></td>
        <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Venue', new_venue_path %>
